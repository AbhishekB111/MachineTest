@model Product
@{
	ViewBag.Title = "Add Product";
}

<div class="row">
	<div class="col-sm-4">
		<form method="post" asp-action="AddProduct" asp-controller="Home">
			<div class="form-group">
				<input asp-for="ProductId" type="hidden" />
				<label asp-for="ProductName" class="custom-control-label"></label>
				<input asp-for="ProductName" class="form-control" required />
				
			</div>
			<div class="form-group">
				<label  class="custom-control-label">Category</label>
				<select asp-for="CategoryId" class="form-control" required asp-items="@(new SelectList(ViewBag.CategoryList,"CategoryId","CategoryName"))">
					<option value="0">-Select-</option>  
				</select>
			</div>
			<div>
				<input type="submit" value="Save" class="btn btn-primary" />
				<a asp-action="Products" asp-controller="Home" class="btn btn-outline-primary">Product List</a>
			</div>
		</form>
	</div>
</div>
